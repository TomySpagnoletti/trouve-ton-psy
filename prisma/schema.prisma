generator client {
  provider = "prisma-client"
  output   = "../src/generated/client"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Psychologist {
  id_in             Int      @id @default(autoincrement())
  id_out            String   @unique
  firstname         String
  lastname          String
  address           String
  address_additional String?
  coordinates_x     Float?
  coordinates_y     Float?
  phone             String?
  email             String?
  website           String?
  public            String[]
  specialty         String?
  teleconsultation  Boolean
  visible           Boolean
  cityIds           Int[]    @default([])
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model City {
  id                        Int       @id @default(autoincrement())
  insee_code                String    @unique
  name                      String
  region_name               String
  department_code           String
  department_name           String
  postal_codes              String[]
  center_latitude           Float
  center_longitude          Float
  last_psychologist_fetch   DateTime?

  @@index([name])
}
